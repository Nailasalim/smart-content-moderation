generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
}


enum Role {
  USER
  MODERATOR
}

enum ContentStatus {
  PENDING
  FLAGGED
  APPROVED
  REMOVED
}

enum ReportStatus {
  PENDING
  REVIEWED
}

enum ActionType {
  APPROVE
  WARN
  REMOVE
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)

  contents  Content[]
  reports   Report[]
  actions   ModerationAction[]

  createdAt DateTime @default(now())
}


model Content {
  id             Int           @id @default(autoincrement())
  text           String
  status         ContentStatus @default(PENDING)
  aiFlagged      Boolean       @default(false)

  aiAttempts     Int           @default(0)
  aiCompleted    Boolean       @default(false)
  aiError        String?

  userId         Int
  user           User          @relation(fields: [userId], references: [id])

  reports        Report[]
  actions        ModerationAction[]

  createdAt      DateTime      @default(now())
}


model Report {
  id              Int          @id @default(autoincrement())
  reason          String
  status          ReportStatus @default(PENDING)
  moderatorAction String?      // APPROVED, REMOVED, WARNED, or null

  contentId Int
  userId    Int

  content   Content @relation(fields: [contentId], references: [id])
  user      User    @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
  reviewedAt  DateTime?
}

model ModerationAction {
  id          Int        @id @default(autoincrement())
  action      ActionType

  moderatorId Int
  contentId   Int

  moderator   User      @relation(fields: [moderatorId], references: [id])
  content     Content   @relation(fields: [contentId], references: [id])

  createdAt   DateTime  @default(now())
}
